<!DOCTYPE html>
<html>
<head>
  <title>MapThing</title>
  <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.css">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mapbox-gl/0.53.0/mapbox-gl.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/mapwize@3.2.0/mapwize.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
  body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }

  .topnav {
    overflow: hidden;
    background-color: #333;
  }

  .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  .topnav a:hover {
    background-color: #ddd;
    color: black;
  }

  .topnav a.active {
    background-color: #4CAF50;
    color: white;
  }

  #mapwize {
    width: 100%;
    height: 500px;
  }
  </style>
</head>
<body>
  <div class="topnav">
    <a class="active" href="Map.html">Home</a>
    <a href="news.html">News</a>
    <a href="contact.html">Contact Authorities</a>
    <a href="change.html">Change</a>
  </div>

  <div id="mapwize"></div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script>
      var socket = io('https://aa354e43.ngrok.io');


      var ExpressScriptsHallVenueId = '5c684b3a08f3430016b0847b';
      Mapwize.apiKey('7ac5381c88abaf3a79d8a8420fda84fc')
      Mapwize.map({
          container: 'mapwize',
          minZoom: 19
      }, {
        venueId: ExpressScriptsHallVenueId
      }).then(map => {
          map.centerOnVenue(ExpressScriptsHallVenueId);

          // map.setUserPosition({
          //     latitude: 38.711736,
          //     longitude: -90.311556,
          //     floor: 1,
          //     accuracy: 5
          // });

          // const el = document.createElement('div');
          // el.className = 'marker my-custom-marker';
          // el.addEventListener('click', () => {
          //     // Listen click on your custom marker
          // });
          //
          // const myCustomMarker = new mapboxgl.Marker(el);

          socket.on('markerUpdate', function(locationData) {
            map.addMarker({
                latitude:  locationData.latitude,
                longitude: locationData.longitude,
                floor:  1,
            }).then(marker => {
                console.log('marker added to map')
            }).catch(err => {
                return  console.error('addMarker failed', err);
            });
          })

      }).catch(err => {
          // Something bad happened during Mapwize loading
          console.error(err);
      });
  </script>
</body>


</html>

